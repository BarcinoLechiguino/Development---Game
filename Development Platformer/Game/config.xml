<!-- Config file for the game -->

<config>
  <app framerate_cap="30" frame_cap_on="true">
    <title>Mutual Cooperation</title>
    <organization>UPC</organization>
  </app>
	
  <renderer>
    <vsync value="false"/>
    <camera x ="0" y ="-570" smoothing_speed ="0.01f"/>
    <spawn_cam x ="0" y ="-570"/>
    <camera_debug value="false" speed="400.0f"/>
  </renderer>
  
  <window>
    <resolution width="1024" height="768" scale="1"/>
    <fullscreen value="false"/>
    <borderless value="false"/>
    <resizable value="false"/>
    <fullscreen_window value="false"/>
  </window>

  <audio>
    <default_volume value="100"/>
    <music>
      <folder>audio/music/</folder>
    </music>
    <sfx>
      <folder>audio/fx/</folder>
    </sfx>
  </audio>

  <file_system>
    <path>data.zip</path>
  </file_system>

  <map>
    <folder>maps/</folder>
    <layers>
      <bg_parallax_speed speed="0.05f"/>
      <first_parallax_speed speed ="0.70f"/>
      <decor_parallax_speed speed ="0.9f"/>
    </layers>
  </map>

  <entities>
    <player>
      <speed x="350.0f" y="0"/>
      <max_speed x="240.0f" y="500.0f"/>
      <acceleration x="60.0f" y="450.0f"/>
      <gravity value="40.0f"/>
      <boost_jump x="0"  y="700.0f" threshold="1000"/>
      <frontflip start="-6.0f" end="6.0f"/>
      <sprite_size w="38" h="58"/>
      <lives lives="3"/>
      <tpCooldown timer="0.0f" cd="1.0f"/>
      <godspeed gspeed ="450.0f"/>
      <jumpFX name ="Jump.wav"/>
      <DuoJumpFX name ="Jump_Duo.wav"/>
      <DeathFX name ="Death.wav"/>
      <ActivateFX name = "Activate.wav"/>
      <TPFX name = "TP.wav"/>
      <PassFX name = "Pass.wav"/>

      <player_1 name="player_1">
        <factoryMap mapName="factoryMap" x="192.0f" y="400.0f"/>
        <forestMap mapName="forestMap" x="192.0f" y="1088.0f"/>
      </player_1>

      <player_2 name="player_2">
        <factoryMap mapName="factoryMap" x="182.0f" y="400.0f"/>
        <forestMap mapName="forestMap" x="182.0f" y="1088.0f"/>
      </player_2>
    </player>

    <enemies>
      <update_cycle_length length="0.1f"/>
      <mecha>
        <position x="199" y="400"/>
        <speed x="125.0f" y="0"/>
        <max_speed x="240.0f" y="500.0f"/>
        <acceleration x="60.0f" y="450.0f"/>
        <gravity value="40.0f"/>
        <sprite_size w="56" h="78"/>
        <lives lives="1"/>
        <detection_radius radius="125"/>
      </mecha>

      <alien>
        <position x="212" y="400"/>
        <speed x="200.0f" y="125.0f"/>
        <sprite_size w="38" h="52"/>
        <lives lives="1"/>
        <detection_radius radius="125"/>
        <update_cycle_length length="0.1f"/>
      </alien>
    </enemies>
  </entities>

  <gui>
    <UITexture file="textures/gui/sprites_UI.png"/>
  </gui>
  
  <scene>
    <StartMenu>
      <background>textures/Spritesheets/UI/Start/lab-background.png</background>
      <music>audio/music/Background music.ogg</music>
      <soundEffects>
        
      </soundEffects>
      <gui>
        <startMenuPanel>
          <images>
            <image name ="title">
              <hitbox x ="0" y ="0" w="0" h="0"/>
              <idle x="0" y="0" w="0" h="0"/>
              <parent name="startMenuPanel"/>
            </image>
          </images>
          
          <buttons>
            <button name="startButton" function ="FadeToScene">
              <hitbox x="0"  y="0" w="0" h="0"/>
              <idle x="0" y="0" w="0" h="0" />
              <hover x="0" y="0" w="0" h="0" />
              <click x="0" y="0" w="0" h="0" />
            </button>
            <button name="exitButton" function ="ExitGame">
              <hitbox x="0"  y="0" w="0" h="0"/>
              <idle x="0" y="0" w="0" h="0" />
              <hover x="0" y="0" w="0" h="0" />
              <click x="0" y="0" w="0" h="0" />
            </button>
            <button name ="settings" function = "GoToSettingMenu">
              <hitbox x="0"  y="0" w="0" h="0"/>
              <idle x="0" y="0" w="0" h="0" />
              <hover x="0" y="0" w="93" h="0" />
              <pos x="0" y="0"/>
            </button>
          </buttons>
        </startMenuPanel>
      </gui>
    </StartMenu>
    
    <settingsMenu>
      <images>
        <image name="panelCreditsHitBox" scale="2.5">
          <hitbox x="0" y="0" w="0" h="0"/>
          <idle x="0" y="0" w="0" h="0"/>
        </image>
        <image name ="Sound full">
          <hitbox x="0" y="0" w="0" h="0"/>
          <idle x="0" y="0" w="0" h="0"/>
        </image>
        <image name ="Sound mute">
          <hitbox x="0" y="0" w="0" h="0"/>
          <idle x="0" y="0" w="0" h="0"/>
        </image>
      </images>
      
      <labels>
        <label text="SETTINGS" font="CopperPlateBI36" pos_x="0" pos_y ="0" >
          <color r="255" g="255" b="255" a="255"/>
        </label>
        <label text="MUSIC VOLUME" font="CopperPlateBI24" pos_x="0" pos_y ="0" >
          <color r="255" g="255" b="255" a="255"/>
        </label>
      </labels>

      <buttons>
        <button name ="Validate" function = "GoBackToMenu">
          <hitbox x="0" y="0" w="0" h="0"/>
          <idle x="0" y="0" w="0" h="0" />
          <hover x="0" y="0" w="0" h="0" />
          <click x="0" y="0" w="0" h="0" />
        </button>
        <button name ="Internet" function = "LinkToPage">
          <hitbox x="0" y="0" w="0" h="0"/>
          <idle x="0" y="0" w="0" h="0" />
          <hover x="0" y="0" w="0" h="0" />
          <click x="0" y="0" w="0" h="0" />
        </button>
        <button name ="Credits" function = "OpenCredits">
          <hitbox x="0" y="0" w="0" h="0"/>
          <idle x="0" y="0" w="0" h="0" />
          <hover x="0" y="0" w="0" h="0" />
          <click x="0" y="0" w="0" h="0" />
        </button>
      </buttons>
    </settingsMenu>
    
    <PausePanel>
      <labels>
        <label text="Pause" font="CooperPlateBI24" pos_x="0" pos_y ="0" >
          <color r="255" g="255" b="255" a="255"/>
        </label>
        <label text="Music Volume" font="CooperPlateBI12" pos_x="0" pos_y ="0" >
          <color r="255" g="255" b="255" a="255"/>
        </label>
      </labels>

      <buttons>
      <button name ="Resume" function = "GoBackToPlay">
        <hitbox x="0"  y="0" w="0" h="0"/>
        <idle x="0" y="0" w="0" h="0" />
        <childs>
          <labels>
            <label text="Resume" font="CopperPlateBI24" pos_x="0" pos_y ="0">
              <color r="255" g="255" b="255" a="255"/>
              <hover>
                <color r="255" g="255" b="255" a="255"/>
              </hover>
            </label>
          </labels>
        </childs>
      </button>
      </buttons>
    </PausePanel>
    
    <GameUI>
      <images>
        <image name="heart1" scale="1">
          <hitbox x="0" y="0" w="0" h="0"/>
          <idle x="0" y="0" w="0" h="0"/>
        </image>
        <image name="heart2" scale="1">
          <hitbox x="0" y="0" w="0" h="0"/>
          <idle x="0" y="0" w="0" h="0"/>
        </image>
        <image name="heart3" scale="1">
          <hitbox x="0" y="0" w="0" h="0"/>
          <idle x="0" y="0" w="0" h="0"/>
        </image>
      </images>

      <labels>
        <label name="Lifes" text="x 0" font="OpenSAnsSB12" pos_x="0" pos_y ="0" >
          <color r="255" g="255" b="255" a="255"/>
        </label>
      </labels>
    </GameUI>
    
    <CreditsPanel>
      <images>
        <image name="panelCreditsHitBox" scale="2.5">
          <hitbox x="0" y="0" w="0" h="0"/>
          <idle x="0" y="0" w="0" h="0"/>
          <pos x="0" y="0"/>
        </image>
      </images>

      <buttons>
        <button name ="Back" function = "BackToSettings">
          <hitbox x="0" y="0" w="0" h="0"/>
          <idle x="0" y="0" w="0" h="0"/>
          <childs>
            <labels>
              <label text="Back" font="CopperPlateBI24" pos_x="0" pos_y ="0">
                <color r="255" g="255" b="255" a="255"/>
                <hover>
                  <color r="255" g="255" b="255" a="255"/>
                </hover>
              </label>
            </labels>
          </childs>
          </button>
          </buttons>
          <Text>
            Instructions of the game
          </Text>
    </CreditsPanel>
    
    <map_name name="Test_map.tmx"></map_name>
    <map_name name="Test_map_2.tmx"></map_name>
    <fade_time value="1"/>
  </scene>

</config>