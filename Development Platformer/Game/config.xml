<!-- Config file for the game -->

<config>
  <app framerate_cap="30">
    <title>Mutual Cooperation</title>
    <organization>UPC</organization>
  </app>
	
  <renderer>
    <vsync value="false"/>
    <camera x ="0" y ="-570" smoothing_speed ="0.01f"/>
    <spawn_cam x ="0" y ="-570"/>
    <camera_debug value="true" speed="300.0f"/>
  </renderer>
  
  <window>
    <resolution width="1024" height="768" scale="1"/>
    <fullscreen value="false"/>
    <borderless value="false"/>
    <resizable value="false"/>
    <fullscreen_window value="false"/>
  </window>

  <audio>
    <default_volume value="100"/>
    <music>
      <folder>audio/music/</folder>
    </music>
    <sfx>
      <folder>audio/fx/</folder>
    </sfx>
  </audio>

  <file_system>
    <path>data.zip</path>
  </file_system>

  <map>
    <folder>maps/</folder>
    <layers>
      <bg_parallax_speed speed="0.05f"/>
      <first_parallax_speed speed ="0.70f"/>
      <decor_parallax_speed speed ="0.25f"/>
    </layers>
  </map>

  <entities>
    <player>
      <!-- <position x="225" y="1125"/> -->
      <position x="192" y="400"/>
      <speed x="350.0f" y="0"/>
      <max_speed x="240.0f" y="500.0f"/>
      <acceleration x="60.0f" y="450.0f"/>
      <gravity value="40.0f"/>
      <boost_jump x="0"  y="700.0f"/>
      <frontflip start="-6.0f" end="6.0f"/>
      <sprite_measures w="38" h="58"/>
      <lives lives="3"/>
      <tpCooldown timer="0.0f" cd="1.0f"/>
      <godspeed gspeed ="250.0f"/>
      <jumpFX name ="Jump.wav"/>
      <DuoJumpFX name ="Jump_Duo.wav"/>
      <DeathFX name ="Death.wav"/>
      <ActivateFX name = "Activate.wav"/>
      <TPFX name = "TP.wav"/>
      <PassFX name = "Pass.wav"/>
    </player>

    <player_2>
      <!-- <position x="200" y="1150"/> -->
      <position x="182" y="400"/>
      <previous_position x="0" y="0"/>
      <last_grounded x="0" y="0"/>
      <speed x="0" y="0"/>
      <max_speed x="10" y="14"/>
      <acceleration x="1" y="14"/>
      <gravity value="1"/>
      <boost_jump x="0"  y="20"/>
      <sprite_measures w="38" h="58"/>
      <lives lives="3"/>
      <tpCooldown cd="1"/>
      <body_margin x="5" y="5"/>
      <collider_tolerance tolerance="3"/>
      <jumpFX name ="Jump.wav"/>
      <DuoJumpFX name ="Jump_Duo.wav"/>
      <DeathFX name ="Death.wav"/>
    </player_2>
  </entities>

  <enemies>
    <update_cycles_sec seconds="0.1f"/>
  </enemies>
  
  <scene>
    <map_name name="Test_Map_2.tmx"></map_name>
    <map_name name="1st_Level.tmx"></map_name>
    <fade_time value="1"/>
  </scene>

</config>